<h1>Roles</h1>

<table class="table table-hover">
  <tr>
    <th class="span4">ONID</th>
    <th class="span8">Role</th>
  </tr>
 <% @roles.each do |role| %>
  <tr>
    <td><%= role.onid %></td>
    <td>
      <%= form_for(role, :url => admin_role_path(role), :html => {:class => 'form-inline'}) do |f| %>
        <%= f.select :role, {:staff => 'staff', :admin => 'admin'}, {}, {:class => 'span2'}%>
        <%= f.submit 'Save', :class => 'btn btn-primary' %>
      <% end %>
      <%= link_to 'Delete', admin_role_path(role), :data => {:confirm => 'Are you sure?'}, :method => :delete, :class => 'btn btn-danger' %>
    </td>
  </tr>
 <% end %>
</table>
<br />

<%= link_to 'New Role', new_admin_role_path, :class => 'btn btn-primary' %>
