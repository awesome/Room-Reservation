<div class="popup osu-purple popover right" id="cancel-popup">
  <h3 class="popover-title">Cancel a reservation
    <span class="close-popup"><%= link_to "Ã—", "#", :class => 'close' %></span>
  </h3>
  <div class="popup-content popover-content">
    <div class="popup-content-errors alert alert-danger"></div>
    <%= label_tag 'room_name', 'Room: ', :style => "display: inline;"%> <span class="room-name"></span><br/>
    <div class="time-range">
      <div class="time-range-label">
